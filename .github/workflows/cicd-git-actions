name: CI/CD Pipeline for webapplication

on:
  push:
    branches:
      - "master"

jobs:
  build:
    runs-on: ami-0614680123427b75e

    steps:
    - name: Checkout code
      uses: actions/checkout@v2

    - name: Set up Docker Buildx
      uses: docker/setup-buildx-action@v2

    - name: Build Docker Image
      run: |
         docker build -t mytask:3.0 -f Dockerfile

    - name: Run Unit Tests
      run: | 
        npm test
        echo "Tests run successfully"

  deploy:
    runs-on: ami-0614680123427b75e
    needs: build
    steps:
    - name: Checkout code
      uses: actions/checkout@v2

    - name: Set up Ansible
      uses: wingrunr21/setup-ansible@v2

    - name: Run Ansible Playbook
      run: |
        ansible-playbook -i /home/ec2-user/WebApplication/Ansible/MyNodeApp/webapp.js/Inventoryfile deploy.yml
